<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectionActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="WhereCanEat!"
        android:textAlignment="center"
        android:textSize="30sp"
        android:padding="15dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_margin="20dp"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/resImage"
                android:layout_width="match_parent"
                android:layout_height="351dp"
                app:srcCompat="@drawable/ic_launcher_foreground" />
            
            <TextView
                android:id="@+id/resTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resturant title"
                android:textStyle="bold"
                android:textSize="25sp"
                android:paddingHorizontal="10dp"
                android:layout_below="@+id/resImage" />
            
            <TextView
                android:id="@+id/cuisineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chinese"
                android:textSize="15sp"
                android:textStyle="italic"
                android:paddingHorizontal="15dp"
                android:layout_below="@+id/resTitle"
                />

            <TextView
                android:id="@+id/ratingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.25/5"
                android:textSize="15sp"
                android:textStyle="italic"
                android:paddingHorizontal="15dp"
                android:layout_toEndOf="@+id/cuisineText"
                android:layout_below="@id/resTitle"
                />

            <TextView
                android:id="@+id/desText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This restaurant has been around since... serving xxx... and is famous for ..."
                android:textSize="18sp"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/ratingText"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>